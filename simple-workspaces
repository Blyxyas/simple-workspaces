#!/bin/bash
clear
# Script made by Alex G. C aka Blyxyas visit github.com/blyxyas for more information

# This script is the main script!
# It is used to run the main program.

panic(){
    echo -e "\033[31mERROR: Workspace not found!\033[0m"
    exit 1
}

findws(){
    # Find the ID of workspace, returns the index where the workspace with the given ID is found.
    for ((i=0; i < ${#workspaces[@]};i++)); do
        if [ "${workspaces[$i].ID}" == "$1" ]; then
            return "${i}"
        fi
    done
    panic
}



# Workspaces:
ws(){
    # ID is a number, it is used to identify the workspace.
    # Commands is an array of Commands to be executed

    Commands=()
    ID=$1

    ws.addcommand(){
        {
            Commands[${#$1[@]}]="$3"
        } || {
            panic
        }
    }

    ws.removecommand(){
        # We remove a command from the workspace.
        for ((i=0; i < ${#Commands[@]}; i++)); do 
            if [ "${Commands[i]}" == "$3" ]; then
                unset "Commands[i]"
            fi
        done
    }

    ws.list(){
        echo -e "\033[1m<======= Commands of Workspace: =======>\033[0m"
    }

    ws.loadws(){
        # We load the workspace.
        for ((i=0; i < ${#Commands[@]};i++)); do
            eval "${Commands[i]}"
        done
    }
}

workspaces=()
# Reading the config file. We're only interested in the workspaces path, because (obviously) we now the path of the binary, but not where the workspaces file is.

while read -r line; do

    IFS='=' read -ra arg <<< "$line"
    IFS=' '

    if [ "${arg[0]}" == "WS_PATH" ]; then
        WS_PATH="${arg[1]}"

    elif [ "${arg[0]}" == "PATH" ]; then
        PATH="${arg[1]}"
    fi

done < "/home/$USER/.config/simple-workspaces/config"

echo "WSPATH: $WS_PATH"
echo "PATH: $PATH"

while read -r line; do

    # reading workspace file
    # If the line is a comment or empty, then skip it.
    if [ "${line:0:1}" = "#" ] || [ -z "$line" ]; then
        continue
    else
        if [ "${line:0:1}" = "@" ]; then
            # The line is a workspace.
            # We need to create the workspace.    
            
            ws workspace "${line:1:1}"

            # We get the ID of the workspace
            
            workspaces[${#workspaces[@]}]=workspace

            # We get the Commands of the workspace
            # now we read the following lines, until we find the end of the workspace.
        
        else
            # The line is a command.
            # We add the command to the workspace.
            workspace.addcommand "${line:0:1}" "${line:1}"
        fi
    fi

done < "$WS_PATH"

save(){
    # We save the workspaces.
    echo -e "\033[1m<=======Saving Workspaces:=======>\033[0m"
    if [ "$EUID" -ne 0 ]; then
        echo -e "\033[31mERROR: All scripts that modify the file must be ran with sudo!\033[0m"
        exit 0
    fi
    echo "\n" > "${WS_PATH}/workspaces"
    
    for ((i=0; i < ${#workspaces[@]};i++)); do
        workspace="${workspaces[$i]}"
        echo -a -e "@" "$workspace.ID" "\n" >> "${WS_PATH}"
        echo -a -e "$workspace.Commands[@]" >> "${WS_PATH}"
    done
}

# Main CLI program:

if [ "$1" = "list" ]; then
    # We list the workspaces.
    echo -e "\033[1m<======= Workspaces =======>\033[0m"
    for ((i=0; i < ${#workspaces[@]};i++)); do
        echo "${workspaces[$i]}"
        ${workspaces[i]}.list
    done

elif [ "$1" = "load" ]; then
    # We load the workspace.
    idx=findws "$2"
    "${workspaces[idx]}".loadws

elif [ "$1" = "remove" ]; then
    # We remove a workspace
    idx=findws "$2"
    unset 'workspaces[$idx]'
    save

elif [ "$1" == "add" ]; then
    # We create a workspace
    workspaces[${#workspaces[@]}]="$2"
    save

elif [ "$1" == "addcommand" ]; then
    # We add a command to a workspace
    idx=findws "$2"
    "${workspaces[idx]}".addcommand "$3"
    save

elif [ "$1" == "removecommand" ]; then
    # We remove a command from a workspace
    idx=findws "$2"
    "${workspaces[idx]}".removecommand "$3"
    save

elif [ "$1" == "uninstall" ]; then

    # First, we read the config file to know the paths.
    read -r -p "Are you sure you want to uninstall simple-workspaces? (y/n) " yn
    case $yn in
        [Yy]* )
            sudo rm -r "${WS_PATH}"
            echo -e "\033[1m<======= Uninstalled =======>\033[0m"
            sudo rm -rf "${PATH}"
            ;;
        [Nn]* )
            echo -e "\033[1m<======= Aborted =======>\033[0m"
            ;;
        * )
            echo -e "\033[1m<======= Aborted =======>\033[0m"
            ;;
        esac

else

    clear
    echo -e "\033[93mSimple Workspaces\033[0m\nSimple Workspaces is a simple workspace manager.\nIt allows you to create workspaces and save them in a file\nYou can load them in the terminal at any moment.\nJust add some commands to a workspace and you're done! Use it whenever you want!\nUsage:\n\n==> simple-workspace \033[94m\033[1mload\033[1m\033[95m[Workspace ID]\033[0m\nOpens a workspace with the given id\n\n==> simple-workspace \033[1m\033[94mhelp | -h | --help | ?\033[0m\nShows this help message\n\n==> simple-workspace \033[1m\033[94maddcommand \033[93m[Workspace ID] \033[95m[command]\033[0m\nAdds a command to the workspace with the given id.\n\n==> simple-workspace \033[1m\033[94mremovecommand \033[93m[Workspace ID] \033[95m[Command]\033[0m\nRemoves a command with the given id from the workspace with the given id.\n\n==> simple-workspace \033[1m\033[94mlist\033[0m\nLists all the workspaces.\n\n==> simple-workspace \033[1m\033[94mlistcommands \033[93m[Workspace ID]\033[0m\n\n==> simple-workspace \033[1m\033[94mremove \033[93m[Workspace ID]\033[0m nRemoves the workspace with the given id\n\nYou can manually edit the file to \033[1m\033[94madd / edit / remove\033[0m workspaces, you can add comments with '#', but if you want to modify the workspaces using the program, the comments will be removed."
fi
